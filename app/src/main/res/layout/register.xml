<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <jp.ac.bemax.sawara.VTextView
        android:id="@+id/register_name"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/vtext_back"
        android:layout_margin="5dp"
        android:cursorVisible="false"
        android:hint="なまえをいれてね"/>

    <jp.ac.bemax.sawara.VTextView
        android:id="@+id/register_description"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/register_name"
        android:background="@drawable/vtext_back"
        android:layout_margin="5dp"
        android:cursorVisible="false"
        android:hint="せつめいをいれてね"/>
	
     <GridView
         android:id="@+id/register_image_viewer"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignParentTop="true"
         android:layout_toLeftOf="@+id/register_description"
         android:layout_toRightOf="@+id/register_tag_viewer"
         android:numColumns="2"
         android:layout_margin="5dp" >
     </GridView>

     <GridView
         android:id="@+id/register_tag_viewer"
         android:layout_width="120dp"
         android:layout_height="match_parent"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:background="?attr/baseColor"
         android:numColumns="1"
         android:layout_margin="5dp" >

     </GridView>

</RelativeLayout>
